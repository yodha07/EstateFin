@model List<User>

@{
    ViewData["Title"] = "List";
}

@{
    var username = Context.Session.GetString("UserName");
}

<h1>Hi @username</h1>
<h2>Users List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Profile Picture</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(user.ProfilePicture))
                    {
                        <img src="@user.ProfilePicture" style="width: 100px; height: 100px" />
                    }
                    else
                    {
                        <h2>No img found</h2>
                    }
                </td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Role</td>
            </tr>
        }
    </tbody>
</table>
