@model EstateFin.Models.User

@{
    ViewData["Title"] = "Update Profile";
}

<style>
    body, html {
        height: 100%;
        margin: 0;
        padding: 0;
        background: linear-gradient(225deg, rgba(255, 94, 164, 1) 0%, rgba(22, 125, 242, 1) 100%);
    }

    #register-container {
        width: 25%;
        justify-content: center;
        margin: 0 auto;
        border-radius: 12px;
        background: rgba(255, 255, 255, 0.9);
    }
</style>

<h2 class="text-center">Update Profile</h2>

<div id="register-container" class="border shadow-lg p-3">

    <div asp-validation-summary="All" class="alert-danger"></div>

    <form asp-action="UpdateProfile" method="post" class="form-control" enctype="multipart/form-data">
      
        <input type="hidden" asp-for="UserID" />

        <div>
            <label>Profile Picture</label>
            <input type="file" name="ProfileImage" class="form-control" />
        </div>

        <div>
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Role"></label>
            <select asp-for="Role" class="form-control">
                <option value="">-- Select Role --</option>
                <option>Buyer</option>
                <option>Seller</option>
                <option>Tenant</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-dark">Update</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
