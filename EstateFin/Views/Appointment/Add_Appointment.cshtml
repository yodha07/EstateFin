@model Appointment

<partial name="Notification"></partial>

<form method="post">
    <div class="form-group">
        <label>Appointment Date</label>
        <input type="date" asp-for="AppointmentDate" class="form-control" id="AppointmentDate" />
    </div>

    <div class="form-group" id="slotDiv" style="display: none;">
        <label>Appointment Time</label>
        <select class="form-control" asp-items="ViewBag.slot" asp-for="slot">
            <option>select</option>
            </select>
           
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#AppointmentDate").on("change", function () {
                let selectedDate = new Date($(this).val());
                let today = new Date();
                today.setHours(0, 0, 0, 0);

                if (selectedDate > today) {
                    $("#slotDiv").show();
                } else {
                    $("#slotDiv").hide();
                }
            });
        });
    </script>
}
