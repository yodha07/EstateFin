@model EstateFin.Models.Transaction

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Receipt</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #2c3e50;
        }

        .details {
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <h1>Payment Receipt</h1>
    <div class="details">
        <p><strong>Payment ID:</strong> @Model.PaymentId</p>
        <p><strong>Amount:</strong> @Model.Amount.ToString("C")</p>
        <p><strong>Transaction Date:</strong> @Model.TransactionDate.ToString("dd MMM yyyy")</p>
        <p><strong>Booking ID:</strong> @Model.BookingId</p>
    </div>
    <p>Thank you for your payment.</p>
</body>
</html>
